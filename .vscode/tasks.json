{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "${file}",
                "&&",
                "cd",
                "${fileDirname}",
                "&&",
                "java",
                "${fileBasenameNoExtension}",
                "&&",
                "del",
                "${fileBasenameNoExtension}.class"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "java",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        }
    ]
}